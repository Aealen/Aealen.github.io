    <title>[C语言]基姆拉尔森计算公式</title>
    <link href="http://www.fangmingxuan.com/2020/04/[C%E8%AF%AD%E8%A8%80]%E5%9F%BA%E5%A7%86%E6%8B%89%E5%B0%94%E6%A3%AE%E8%AE%A1%E7%AE%97%E5%85%AC%E5%BC%8F/"/>
    <id>http://www.fangmingxuan.com/2020/04/[C%E8%AF%AD%E8%A8%80]%E5%9F%BA%E5%A7%86%E6%8B%89%E5%B0%94%E6%A3%AE%E8%AE%A1%E7%AE%97%E5%85%AC%E5%BC%8F/</id>
    <published>2020-04-14T12:53:26.000Z</published>
